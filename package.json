{
  "name": "Webmail-for-Desktop",
  "version": "1.0.0",
  "description": "Electron based website wrapper for IIT Bombay Webmail",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaniyeri/webmail-for-desktop.git"
  },
  "keywords": [
    "webmail",
    "desktop",
    "iitb",
    "Roundcube",
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^11.1.1"
  },
  "bugs": {
    "url": "https://github.com/kaniyeri/webmail-for-desktop/issues"
  },
  "homepage": "https://github.com/kaniyeri/webmail-for-desktop#readme",
  "dependencies": {
    "@electron-forge/maker-dmg": "^6.0.0-beta.54",
    "electron-cookies": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "webmail",
        "icon": "assets/webmail-mac.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "webmail",
            "icon": "assets/webmail-mac.icns"
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "webmail"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
